---
import LabCard from '../components/ui/LabCard.astro';
import experiments from '../data/experiments.json';

const experimentsData = experiments.length > 0 ? experiments.filter((exp: any) => exp?.recent) : []

---

<section id="experiments" class="min-h-screen py-24 px-6 md:px-16 bg-gradient-to-b from-[#0a0a0a] via-[#0d0d14] to-[#111122] text-[#eaeaea] relative">
    
    <!-- Glow ambiental -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-0 left-1/2 w-[400px] h-[400px] bg-[#7b5cff]/10 blur-[200px] rounded-full -translate-x-1/2 animate-pulse"></div>
    </div>

    <div class="max-w-6xl mx-auto relative z-10">
        <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">
            Experimentos recientes
        </h2>
        
        <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
            {experimentsData.length > 0 ? (
                experimentsData
                .filter((exp: any) => exp.recent)
                .map((exp: any) => <LabCard {...exp} />)
            ) : (
                <p class="col-span-full text-center text-[#a1a1a1] text-lg mt-12">
                No hay prototipos recientes para mostrar por ahora. ¡Vuelve pronto para ver nuevas ideas!
                </p>
            )}
        </div>

        <div class="text-center mt-16 space-y-4">
            <p class="text-sm text-[#7b5cff]/70 font-mono">
                &gt; explorando nuevas ideas...
                <span class="animate-pulse text-[#9a85ff]">|</span>
            </p>
            <a
                href="/projects"
                class="inline-block mt-4 px-6 py-2 border border-[#7b5cff] text-[#7b5cff] rounded-full hover:bg-[#7b5cff]/10 transition-colors"
            >
                Ver todos los prototipos →
            </a>
        </div>
    </div>
</section>
