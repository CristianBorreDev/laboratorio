---
import Layout from '../layouts/Layout.astro';
import LabCard from '../components/ui/LabCard.astro';
import experiments from '../data/experiments.json';

const experimentsData = experiments.length > 0 ? experiments : []
---

<Layout>
  <section class="min-h-screen py-24 px-6 md:px-16 bg-gradient-to-b from-[#0a0a0a] via-[#0d0d14] to-[#111122] text-[#eaeaea] relative">
    
    <!-- Glow ambiental -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-0 left-1/2 w-[400px] h-[400px] bg-[#7b5cff]/10 blur-[200px] rounded-full -translate-x-1/2 animate-pulse"></div>
    </div>

    <div class="max-w-6xl mx-auto relative z-10">
      <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">
        Todos los prototipos
      </h2>

      <!-- Grid de prototipos -->
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3" id="projects-grid">
        {experimentsData.length > 0 ? (
            experimentsData.map((exp: any) => (
                <LabCard {...exp} />
            ))
        ) : (
            <p class="col-span-full text-center text-[#a1a1a1] text-lg mt-12">
            No hay prototipos disponibles por ahora. Â¡Vuelve pronto para ver nuevas creaciones!
            </p>
        )}
      </div>
    </div>
  </section>
</Layout>
