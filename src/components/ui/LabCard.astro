---
const { title, description, stack, demoLink, githubLink, image, type } = Astro.props;
---

<article class="group relative border border-[#1f1f1f] rounded-2xl overflow-hidden bg-[#0f0f14]/50 hover:border-[#7b5cff]/40 transition-all duration-300 flex flex-col">
  <!-- Imagen / preview -->
  <div class="overflow-hidden">
    <img
      src={image}
      alt={title}
      loading="lazy"
      class="w-full h-full object-cover opacity-90 group-hover:opacity-100 group-hover:scale-[1.03] transition-all duration-500"
    />
  </div>

  <!-- Contenido -->
  <div class="p-6 flex-1 flex flex-col justify-between">
    <div>
      <h3 class="text-lg font-semibold text-[#eaeaea] mb-1">{title}</h3>
      <p class="text-[#a1a1a1] text-sm mb-3 leading-relaxed">{description}</p>
      <p class="text-[#9a85ff] text-xs font-mono mb-4">{type}</p>

      <ul class="flex gap-2 flex-wrap mb-4">
        {stack.map((tech: string) => (
          <li class="text-xs bg-[#1a1a1a] px-2 py-1 rounded-md text-[#c2c2c2] border border-[#222]">
            {tech}
          </li>
        ))}
      </ul>
    </div>

    <div class="mt-5 flex gap-4">
      {demoLink && (
        <a
          href={demoLink}
          target="_blank"
          class="inline-block text-sm text-[#9a85ff] hover:text-[#eaeaea] font-medium transition-colors"
        >
          Ver demo →
        </a>
      )}
      {githubLink && (
        <a
          href={githubLink}
          target="_blank"
          class="inline-block text-sm text-[#7b5cff] hover:text-[#eaeaea] font-medium transition-colors"
        >
          GitHub →
        </a>
      )}
    </div>
  </div>
</article>
