---
const navLinks = [
  { name: "Inicio", href: "/" },
  { name: "Exploraciones", href: "#experiments" },
  { name: "Portafolio", href: "https://cristian-dev.vercel.app" },
];

const currentPath = Astro.url.pathname;

const filteredLinks = currentPath === "/" 
  ? navLinks 
  : navLinks.filter(link => link.name === "Inicio" || link.name === "Portafolio");

---

<section class="fixed top-0 w-full z-50 backdrop-blur-md bg-[#0a0a0a]/80 border-b border-[#1f1f1f] shadow-[0_2px_10px_rgba(123,92,255,0.05)]">
  <nav class="flex justify-center items-center py-5 px-6 md:px-12">
    <ul class="flex gap-8 text-sm font-light tracking-widest">
      {filteredLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="relative text-[#a1a1a1] hover:text-[#eaeaea] transition-colors duration-300 
                   after:content-[''] after:absolute after:left-0 after:-bottom-1 after:w-0 after:h-[1px] 
                   after:bg-gradient-to-r after:from-[#7b5cff] after:to-[#b299ff] 
                   hover:after:w-full after:transition-all after:duration-500"
            target={link.href.startsWith("http") ? "_blank" : "_self"}
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</section>
